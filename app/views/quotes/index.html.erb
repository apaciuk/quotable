<%= turbo_stream_from "quotes" %>
<main class="container">
<div class="header d-flex justify-content-between align-items-center mb-4" style="background: linear-gradient(to right, #e0eafc, #cfdef3); padding: 5px 20px 5px 20px; border-radius: 5px;">
<span class="badge bg-info" ><%= link_to image_tag('icon.png', size: 40), root_path, class: 'icon' %></span>
<%= link_to "New Quote", new_quote_path, class: "btn btn-danger",  data: { turbo_frame: dom_id(Quote.new) } %>
</div>

<%= turbo_frame_tag Quote.new %>
<%= turbo_frame_tag "quotes" do %>
<%= render "quotes/empty_state" %>
<%= render @quotes %>
<% end %>
</main>


